<div class="container">
	<div>
		<h5> Title:</h5>
		{{input value=title class="form-control"}}
	</div>
	<br>
	<div>
		<h3>Select the cards:</h3>
		{{#each model.cards as |card|}}
	  	<img {{action 'chooseCardForDeck' card}} class="card-mini {{if card.isSelected 'selected'}}" src={{card.imageUrl}}>
		{{/each}}
	</div>
	<br>
	<div id="description">
		<span>Description </span><span>(Markdown Supported):</span>
		<br>
		<br>
		{{textarea value=deckDescription rows="3" cols="1" class="form-control"}}
	</div>
	<br>
	<h5> Preview: </h5>
	<div id="preview">
	    <h1>{{title}}</h1>
	    {{markdown-to-html markdown='***'}}
		{{#each selectedCards as |card|}}
			<img class="card-sm" title={{card.title}} src={{card.imageUrl}}>
		{{/each}}
		{{markdown-to-html markdown='***'}}
		{{markdown-to-html markdown=deckDescription}}
	</div>


</div>
